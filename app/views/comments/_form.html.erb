<%= form_for @comment do |f| %>

  <%= @current_user.email %>
  
  <div class="form-group">
    <%= f.label :"Leave your comments"%>
    <%= f.text_field :blog, :required => true, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :date %>
    <%= f.text_field :blog, :required => true, :class => 'form-control' %>
  </div>
  <%= f.submit "Add comment" %>

<% end %>
